@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- #header-wrap -->
<div id="header-bottom-wrap" class="is-clearfix">
    <div id="header-bottom" class="site-header-bottom">
        <div id="header-bottom-inner" class="site-header-bottom-inner ">
            <section class="hero slider is-clearfix ">
                <div style="background-image: url('/app-images/home.jpg');background-repeat: no-repeat;background-size: cover;height: 200px;position: relative;background-position: center center;">
                </div>
                <div style="position: absolute;width: 100%;height: 100%;background-color: #000000;opacity: 0.5;transition: background 0.3s, border-radius 0.3s, opacity 0.3s;">
                </div>
                <div style="text-align: center;position: absolute;width: 100%;">
                    <h2 style="color: #fff;font-size: 36px;margin-top: 138px;font-family: 'LIBRE FRANKLIN', sans-serif;" class="">Pizze</h2>
                </div>
            </section>
            <!-- .slider -->
        </div>
        <!-- #header-bottom-inner -->
    </div>
    <!-- #header-bottom -->
</div>
<!-- #header-bottom-wrap -->
<!-- import content layouts and modules -->
<div id="content-main-wrap" class="is-clearfix">
    <div id="content-area" class="site-content-area">
        <div id="content-area-inner" class="site-content-area-inner">
            <!-- works section -->
            <section id="welcome" class="section introduction is-clearfix">
                <div class="ps-checkout ps-section--shopping">
                    <div class="container">
                        <div class="ps-section__header">
                            <h1>Checkout</h1>
                        </div>
                        <div class="ps-section__content">
                            <form class="ps-form--checkout" action="do_action" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="ps-form__billing-info">
                                            <h3 class="ps-form__heading">BESTELLING</h3>
                                            <p>
                                                Je bestelling kun je hieronder afronden met of zonder account.
                                            </p>
                                            <p>
                                                Bezoigen is vanaf 15,-- en kost 5,- Vanal euro is het gratis:
                                            </p>
                                            <div class="form-group">
                                                <div class="ps-checkbox">
                                                    <input class="form-control" type="checkbox" id="create-account">
                                                    <label for="create-account">Create an account?</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="ps-checkbox">
                                                    <input class="form-control" type="checkbox" id="cb01">
                                                    <label for="cb01">Ship to a different address?</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    VOORNAAM <sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    ACHTERNAAM <sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    E-MAIL<sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    TELEFOON <sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="email">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    BEZORGTIJD <sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <p>
                                                BEZORGADRES
                                            </p>
                                            <div class="form-group">
                                                <label>
                                                    POSTCODE <sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    HUISNUMMER<sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    WOONPLAATS<sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>
                                            <p>
                                                BETALING
                                            </p>
                                            <div class="form-group">
                                                <label>
                                                    Address<sup>*</sup>
                                                </label>
                                                <div class="form-group__content">
                                                    <input class="form-control" type="text">
                                                </div>
                                            </div>

                                            <h3 class="mt-40"> Addition information</h3>
                                            <div class="form-group">
                                                <label>Order Notes</label>
                                                <div class="form-group__content">
                                                    <textarea class="form-control" rows="7" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="ps-form__total" style="padding: 3px 88px 0px 44px;">
                                            <div style="background: #ececec;border: 1px solid;padding: 9px 15px;">
                                                <h3 class="ps-form__heading" style="font-size: 37px;font-family: 'Libre Franklin';">BESTELLING</h3>
                                                <div class="content">
                                                    <ul class="list no-margin" style="padding:0px 100px 0px 0px;">
                                                        <li>Buffalo Mozzarella.<span style="float: right;">5.0</span></li>
                                                        <li>Mozzarella. <span style="float: right;">2.5</span></li>
                                                        <li>Parmesan Cheese <span style="float: right;">3.1</span></li>
                                                        <li>Gorgonzola <span style="float: right;">2.8</span></li>
                                                        <li>Tuna Fish <span style="float: right;">4.66</span></li>
                                                        <li>Anchovies <span style="float: right;">1.5</span></li>
                                                    </ul>
                                                    <a class="ps-btn ps-btn--fullwidth" href="#" style="margin-top: 17px;margin-bottom: 18px;">Proceed to checkout</a>
                                                    <div style="text-align: center;">
                                                        <img alt="Piano" src="/app-images/Piano-b-black.png" style="width: 233px;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- #content-area -->
</div>

